<!-- page header -->
<div class="relative">
  <div class="absolute inset-0 bg-gray-900">
    <!-- <img class="h-full w-full object-cover" src="https://images.unsplash.com/photo-1525130413817-d45c1d127c42?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1920&q=60&&sat=-100" alt=""> -->
    <div class="absolute inset-0" aria-hidden="true"></div>
  </div>
  <div class="relative mx-auto max-w-7xl py-24 px-4 sm:py-16 sm:px-6 lg:px-8">
    <h1 class="text-4xl font-bold tracking-tight text-white sm:text-5xl lg:text-4xl">Application</h1>
    <p class="mt-6 max-w-2xl text-xl text-indigo-100">Apply to Founder Digest. Each submission is manually reviewed by our team within 24 hours.</p>
  </div>
</div>


<!-- form -->
<div class="relative">
  <div class="relative max-w-7xl mx-auto sm:px-6 lg:px-8">
    <form class="space-y-8 divide-y divide-gray-200 mx-auto max-w-7xl py-24 px-4 sm:py-12">
      <div class="space-y-8 divide-gray-200 sm:space-y-5">
        <div class="space-y-6 sm:space-y-5">



        </div>

        <div class="">
          <div class="space-y-6 sm:space-y-5">
            <div class="sm:grid sm:grid-cols-3 sm:items-start sm:gap-4 sm:border-t sm:border-gray-200 sm:pt-5">
              <label for="first-name" class="block text-sm font-medium text-gray-700 sm:mt-px sm:pt-2" >First name</label>
              <div class="mt-1 sm:col-span-2 sm:mt-0">
                <input type="text" name="first-name" id="first-name" autocomplete="given-name" placeholder="John" class="block w-full max-w-lg rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:max-w-xs sm:text-sm">
              </div>
            </div>

            <div class="sm:grid sm:grid-cols-3 sm:items-start sm:gap-4 sm:border-t sm:border-gray-200 sm:pt-5">
              <label for="last-name" class="block text-sm font-medium text-gray-700 sm:mt-px sm:pt-2">Last name</label>
              <div class="mt-1 sm:col-span-2 sm:mt-0">
                <input type="text" name="last-name" id="last-name" autocomplete="family-name"  placeholder="Smith" class="block w-full max-w-lg rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:max-w-xs sm:text-sm">
              </div>
            </div>

            <div class="sm:grid sm:grid-cols-3 sm:items-start sm:gap-4 sm:border-t sm:border-gray-200 sm:pt-5">
              <label for="email" class="block text-sm font-medium text-gray-700 sm:mt-px sm:pt-2">Email address</label>
              <div class="mt-1 sm:col-span-2 sm:mt-0">
                <input id="email" name="email" type="email" autocomplete="email" placeholder="email@company.com" class="block w-full max-w-lg rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm">
              </div>
            </div>

            <div class="sm:grid sm:grid-cols-3 sm:items-start sm:gap-4 sm:border-t sm:border-gray-200 sm:pt-5">
              <label for="email" class="block text-sm font-medium text-gray-700 sm:mt-px sm:pt-2">Company Website</label>
              <div class="mt-1 sm:col-span-2 sm:mt-0">
                <input id="email" name="email" type="url" autocomplete="email" placeholder="http://www.company.com" class="block w-full max-w-lg rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm">
              </div>
            </div>

          </div>
        </div>

        <div class="space-y-6 divide-y divide-gray-200 pt-8 sm:space-y-5 sm:pt-5">
          <div class="space-y-6 divide-y sm:space-y-5">
            <div class="pt-6 sm:pt-5">
              <div role="group" aria-labelledby="label-notifications">
                <div class="sm:grid sm:grid-cols-3 sm:items-baseline sm:gap-4">
                  <div>
                    <div class="text-base font-medium text-gray-900 sm:text-sm sm:text-gray-700" id="label-notifications">What is your role?</div>
                  </div>
                  <div class="sm:col-span-2">
                    <div class="max-w-lg">

                      <div class="mt-1 space-y-4">
                        <div class="flex items-center">
                          <input id="push-everything" name="push-notifications" type="radio" class="h-4 w-4 border-gray-300 text-indigo-600 focus:ring-indigo-500">
                          <label for="push-everything" class="ml-3 block text-sm font-medium text-gray-700">C-Suite</label>
                        </div>
                        <div class="flex items-center">
                          <input id="push-email" name="push-notifications" type="radio" class="h-4 w-4 border-gray-300 text-indigo-600 focus:ring-indigo-500">
                          <label for="push-email" class="ml-3 block text-sm font-medium text-gray-700">Founder</label>
                        </div>
                        <div class="flex items-center">
                          <input id="push-nothing" name="push-notifications" type="radio" class="h-4 w-4 border-gray-300 text-indigo-600 focus:ring-indigo-500">
                          <label for="push-nothing" class="ml-3 block text-sm font-medium text-gray-700">Employee</label>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
        <div class="sm:grid sm:grid-cols-3 sm:items-start sm:gap-4 sm:border-t sm:border-gray-200 sm:pt-5 pt-8 sm:space-y-5">
          <label for="about" class="block text-sm font-medium text-gray-700 sm:mt-px sm:pt-2">Paste a snippet of your most recent stakeholder update (optional).</label>
          <div class="mt-1 sm:col-span-2 sm:mt-0">
            <textarea id="about" name="about" rows="9" placeholder="Stakeholders,&#10&#10Last month we primarily worked on..." class="block w-full max-w-lg rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm"></textarea>
            <p class="mt-2 text-xs text-gray-500">Once approved, you will need to send your own updates to see others.</p>
          </div>
        </div>

      </div>



      <div class="pt-5">
        <div class="flex justify-left">
          <button type="submit" class="inline-flex justify-center rounded-md border border-transparent bg-indigo-600 py-2 px-10 text-sm font-medium text-white shadow-sm hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2">Apply</button>
        </div>
      </div>
    </form>

  </div>

</div>
