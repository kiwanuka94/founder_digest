<%= render partial: "shared/heading", locals: {title: 'Application', tagline: 'Apply to Founder Digest. Each submission is manually reviewed by our team within 24 hours.'} %>

<% plan_name = params[:plan] || 'free' %>

<!-- form -->
<div class="relative">
<!-- class="space-y-8 divide-y divide-gray-200 mx-auto max-w-7xl py-24 px-4 sm:py-12" -->
  <div class="relative max-w-7xl mx-auto sm:px-6 lg:px-8">
    <%= form_for UserSubmission.new do |f| %>

        <div class="space-y-8 divide-gray-200 sm:space-y-5">
          <div class="space-y-6 sm:space-y-5">
          </div>

          <input type="hidden" id="user_submission_plan_name" name="user_submission[plan_name]" value="<%=plan_name%>">

          <div class="">
            <div class="space-y-6 sm:space-y-5">
              <div class="sm:grid sm:grid-cols-3 sm:items-start sm:gap-4 sm:border-t sm:border-gray-200 sm:pt-5">
                <label for="first_name" class="block text-sm font-medium text-gray-700 sm:mt-px sm:pt-2">First name</label>
                <div class="mt-1 sm:col-span-2 sm:mt-0">
                  <%= f.text_field :first_name, placeholder: 'John', class: 'block w-full max-w-lg rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:max-w-xs sm:text-sm' %>
                </div>
              </div>

              <div class="sm:grid sm:grid-cols-3 sm:items-start sm:gap-4 sm:border-t sm:border-gray-200 sm:pt-5">
                <label for="last_name" class="block text-sm font-medium text-gray-700 sm:mt-px sm:pt-2">Last name</label>
                <div class="mt-1 sm:col-span-2 sm:mt-0">
                  <%= f.text_field :last_name, placeholder: 'Smith', class: 'block w-full max-w-lg rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:max-w-xs sm:text-sm' %>
                </div>
              </div>

              <div class="sm:grid sm:grid-cols-3 sm:items-start sm:gap-4 sm:border-t sm:border-gray-200 sm:pt-5">
                <label for="email" class="block text-sm font-medium text-gray-700 sm:mt-px sm:pt-2">Email address</label>
                <div class="mt-1 sm:col-span-2 sm:mt-0">
                  <%= f.text_field :email, type: 'email', placeholder: 'email@company.com', class: 'block w-full max-w-lg rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm' %>
                </div>
              </div>

              <div class="sm:grid sm:grid-cols-3 sm:items-start sm:gap-4 sm:border-t sm:border-gray-200 sm:pt-5">
                <label for="website" class="block text-sm font-medium text-gray-700 sm:mt-px sm:pt-2">Company Website</label>
                <div class="mt-1 sm:col-span-2 sm:mt-0">
                  <%= f.text_field :website, type: 'url', placeholder: 'http://www.company.com', class: 'block w-full max-w-lg rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm' %>
                </div>
              </div>

            </div>
          </div>

          <div class="space-y-6 divide-y divide-gray-200 pt-8 sm:space-y-5 sm:pt-5">
            <div class="space-y-6 divide-y sm:space-y-5">
              <div class="pt-6 sm:pt-5">
                <div role="group" aria-labelledby="label-notifications">
                  <div class="sm:grid sm:grid-cols-3 sm:items-baseline sm:gap-4">
                    <div>
                      <div class="text-base font-medium text-gray-900 sm:text-sm sm:text-gray-700" id="label-notifications">What is your role?</div>
                    </div>
                    <div class="sm:col-span-2">
                      <div class="max-w-lg">

                        <div class="mt-1 space-y-4">
                          <div class="flex items-center">
                            <input id="user_submission_job_role_csuite" name="user_submission[job_role]" type="radio" value="c-suite" class="h-4 w-4 border-gray-300 text-indigo-600 focus:ring-indigo-500">
                            <label for="push-everything" class="ml-3 block text-sm font-medium text-gray-700">C-Suite</label>
                          </div>
                          <div class="flex items-center">
                            <input id="user_submission_job_role_founder" name="user_submission[job_role]" type="radio" value="founder" class="h-4 w-4 border-gray-300 text-indigo-600 focus:ring-indigo-500">
                            <label for="push-email" class="ml-3 block text-sm font-medium text-gray-700">Founder</label>
                          </div>
                          <div class="flex items-center">
                            <input id="user_submission_job_role_employee" name="user_submission[job_role]" type="radio" value="employee" class="h-4 w-4 border-gray-300 text-indigo-600 focus:ring-indigo-500">
                            <label for="push-nothing" class="ml-3 block text-sm font-medium text-gray-700">Employee</label>
                          </div>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <div class="sm:grid sm:grid-cols-3 sm:items-start sm:gap-4 sm:border-t sm:border-gray-200 sm:pt-5 pt-8 sm:space-y-5">
            <label for="text" class="block text-sm font-medium text-gray-700 sm:mt-px sm:pt-2">Paste a snippet of your most recent stakeholder update (optional).</label>
            <div class="mt-1 sm:col-span-2 sm:mt-0">
              <%= f.text_area :text, placeholder: "Stakeholders,&#10&#10Last month we primarily worked on...".html_safe, class: 'block w-full max-w-lg rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm', rows: '9' %>
              <p class="mt-2 text-xs text-gray-500">Once approved, you will need to send your own updates to see others.</p>
            </div>
          </div>

        </div>



        <div class="pt-5">
          <div class="flex justify-left">
            <button type="submit" class="inline-flex justify-center rounded-md border border-transparent bg-indigo-600 py-2 px-10 text-sm font-medium text-white shadow-sm hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2">Apply</button>
          </div>
        </div>

    <% end %>

  </div>

</div>
