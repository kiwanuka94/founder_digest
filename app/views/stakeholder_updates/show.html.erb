
<%= render partial: "shared/heading-internal", locals: {title: 'Confirm and Publish', tagline: "Title: #{@stakeholder_update.title}"} %>

<div class="max-w-3xl mx-auto mt-10 mb-20">
    <div class="border p-4 border-dashed">
        <%= @stakeholder_update.content %>
    </div>
    

    <%= form_for @stakeholder_update do |f| %>

        
        <%= f.text_field :confirmed_at, type: 'hidden', value: DateTime.now %>

        <div class="text-right mt-2">
            <button type="submit" class="inline-flex items-center rounded-md border border-transparent bg-indigo-100 px-4 py-2 text-sm font-medium text-indigo-700 hover:bg-indigo-200 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2 mt-20">Confirm & Share</button>
        </div>

    <% end %>
</div>

